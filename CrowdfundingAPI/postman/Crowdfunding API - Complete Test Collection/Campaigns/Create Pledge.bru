meta {
  name: Create Pledge
  type: http
  seq: 6
}

post {
  url: {{baseUrl}}/api/v1/campaigns/{{campaignId}}/pledge
  body: json
  auth: inherit
}

headers {
  Content-Type: application/json
  Authorization: Bearer {{authToken}}
}

body:json {
  {
    "amount": 50,
    "rewardTierId": null
  }
}

script:post-response {
  if (res.getStatus() === 200) {
      const response = res.getBody();
      if (response.success && response.data.id) {
          bru.setEnvVar('pledgeId', response.data.id);
          console.log('Pledge created with ID:', response.data.id);
      }
  }
}

settings {
  encodeUrl: true
}
